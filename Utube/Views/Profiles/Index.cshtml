@model IEnumerable<Utube.Models.Profile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Профили</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Профиль
            @*@Html.DisplayNameFor(model => model.Name)*@
        </th>
        <th>
            
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            Картинка
            @*@Html.DisplayNameFor(model => model.Picture)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @if(item.Picture!=null)
            {
                @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64," 
                                + Convert.ToBase64String(item.Picture) + "\" />")
            }
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id },new { @class = "btn btn-success" }) 
            @Html.ActionLink("Инфо", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
